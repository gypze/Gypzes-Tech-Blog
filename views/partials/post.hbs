{{!-- show blogpost content --}}
<div class="row my-2">
    <div class="col-md-12">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title"><a href="/post/{{id}}">{{title}}</a></h5>
                <p class="card-text">{{content}}</p>
                <p class="card-text">Created on: {{format_date createdAt}}</p>
            </div>
            <div class="card-footer">
               <button id="delete-btn" data-postid="{{id}}" class="btn delete-btn">Delete</button>

                <a href="/dashboard/edit/{{id}}" class="btn edit-btn">Edit</a>
            </div>
        </div>
    </div>
</div>

